<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
<bean id = "addr" class = "com.capgemini.in.SpringInjectionUsingAutowire2.Address">
<property name = "city" value = "Hisar"> </property>
<property name = "state" value = "Haryana"> </property>
<property name = "country" value = "India"> </property>
</bean>
<bean id = "per" class = "com.capgemini.in.SpringInjectionUsingAutowire2.Person" autowire = "byType">
<property name = "pid" value = "32"> </property>
<property name = "pname" value = "Pradeep"> </property>

</bean>
</beans>